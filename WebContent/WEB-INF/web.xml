<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
     
     
 <!--servlet mapping for login controller-->
     <servlet>
     	<servlet-name>loginControl</servlet-name>
     	<servlet-class>login.LoginController</servlet-class>
     </servlet>
     
     <servlet-mapping>
		<servlet-name>loginControl</servlet-name>
     	<url-pattern>/log</url-pattern>     
     </servlet-mapping>
     
     
<!--servlet mapping for register controller-->
     <servlet>
		 <servlet-name>RegControl</servlet-name>
		 <servlet-class>register.RegisterController</servlet-class>    
     </servlet>
     
     <servlet-mapping>
		<servlet-name>RegControl</servlet-name> 
		<url-pattern>/reg</url-pattern>    
     </servlet-mapping>
     
     
<!--servlet mapping for user profile controller-->     
      <servlet>
		 <servlet-name>userProfile</servlet-name>
		 <servlet-class>em.user.UserProfileController</servlet-class>    
     </servlet>
     
     <servlet-mapping>
		<servlet-name>userProfile</servlet-name> 
		<url-pattern>/up</url-pattern>    
     </servlet-mapping>
     
     
 <!--servlet mapping for event dashboard controller-->    
     <servlet>
		 <servlet-name>eventDashboard</servlet-name>
		 <servlet-class>em.createEvent.EventDashboardController</servlet-class>    
     </servlet>
     
     <servlet-mapping>
		<servlet-name>eventDashboard</servlet-name> 
		<url-pattern>/ed</url-pattern>    
     </servlet-mapping>
     
     
<!--servlet mapping for event controller-->     
     <servlet>
		 <servlet-name>EventController</servlet-name>
		 <servlet-class>em.createEvent.EventController</servlet-class>    
     </servlet>
     
     <servlet-mapping>
		<servlet-name>EventController</servlet-name> 
		<url-pattern>/ec</url-pattern>    
     </servlet-mapping>
     
     
 <!--servlet mapping for delete event controller-->    
     <servlet>
		 <servlet-name>DeleteEvent</servlet-name>
		 <servlet-class>em.createEvent.DeleteEventController</servlet-class>    
     </servlet>
     
     <servlet-mapping>
		<servlet-name>DeleteEvent</servlet-name> 
		<url-pattern>/eDel</url-pattern>    
     </servlet-mapping>
     
     
<!--servlet mapping for my events controller-->     
     <servlet>
		 <servlet-name>MyEvents</servlet-name>
		 <servlet-class>em.createEvent.MyEventsController</servlet-class>    
     </servlet>
     
     <servlet-mapping>
		<servlet-name>MyEvents</servlet-name> 
		<url-pattern>/mEvents</url-pattern>    
     </servlet-mapping>
     
     
<!--servlet mapping for update event controller-->    
     <servlet>
		 <servlet-name>UpdateEvent</servlet-name>
		 <servlet-class>em.createEvent.UpdateEventController</servlet-class>    
     </servlet>
     
     <servlet-mapping>
		<servlet-name>UpdateEvent</servlet-name> 
		<url-pattern>/ue</url-pattern>    
     </servlet-mapping>
     
     
     
     
     
     
     
     
     
     
     
     
</web-app>     